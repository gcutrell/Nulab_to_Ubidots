<scripts>

   <script name="WriteLastDate" >
     <delete file="LastDate.txt" />
     <date var="LastDate" format="MM dd yyyy" />
     <write file="LastDate.txt" string="[LastDate]" />
   </script>

 <script name="DateCompare" >
   <date var="Cmonth" format="MM" />
   <date var="Cday" format="dd" />
   <date var="Cyear" format="yyyy" />

   <loadvars file="LastDate.txt" type="text" delimiter=" " line="1" vars="Lmonth,Lday,Lyear"/> 
   
   <math var="MonthDiff" expression="[Lmonth]-[Cmonth]" />
   <math var="DayDiff" expression="[Lday]-[Cday]" />
   <math var="YearDiff" expression="[Lyear]-[Cyear]" />
   
   <if condition="[DayDiff] != 0">
       <set var="EmailFlag" value="0"/>
       <set var="EmailAlarmNum" value="0"/>
       <set var="InletAlarmNum" value="0"/>
   </if>

   <if condition="([MonthDiff] != 0) AND ([MonthlyRO] == 1)" >
     <createdir path="[Lyear]"/>
     <createdir path="[Lyear]/[Lmonth]"/>

     <append file="N+N_Data-L.txt" to="All_N+N_Data-L.txt" />
     <append file="Phosphate_Data-L.txt" to="All_Phosphate_Data-L.txt" />
     <append file="Ammonium_Data-L.txt" to="All_Ammonium_Data-L.txt" />
     <append file="Nitrite_Data-L.txt" to="All_Nitrite_Data-L.txt" />
     <append file="Nitrate_Data-L.txt" to="All_Nitrate_Data-L.txt" />

     <copy file="N+N_Data-L.txt" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-N+N_Data-L.txt" />
     <copy file="N+Nobs.png" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-N+Nobs.png" />
     <copy file="N+Nconc.png" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-N+Nconc.png" />

     <copy file="Phosphate_Data-L.txt" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-Phosphate_Data-L.txt" />
     <copy file="PO4obs.png" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-PO4obs.png" />
     <copy file="PO4conc.png" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-PO4conc.png" />
     
     <copy file="Ammonium_Data-L.txt" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-Ammonium_Data-L.txt" />
     <copy file="NH4obs.png" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-NH4obs.png" />
     <copy file="NH4conc.png" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-NH4conc.png" />
     
     <copy file="Nitrite_Data-L.txt" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-Nitrite_Data-L.txt" />
     <copy file="NO2obs.png" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-NO2obs.png" />
     <copy file="NO2conc.png" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-NO2conc.png" />
     
     <copy file="Nitrate_Data-L.txt" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-Nitrate_Data-L.txt" />
     <copy file="NO3conc.png" to="[Lyear]/[Lmonth]/[Lyear]-[Lmonth]-NO3conc.png" />

     <delete file="N+N_Data-L.txt" />
     <delete file="Phosphate_Data-L.txt" />
     <delete file="Ammonium_Data-L.txt" />
     <delete file="Nitrite_Data-L.txt" />
     <delete file="Nitrate_Data-L.txt" />

     <write file="N+N_Data-L.txt" string="#MM/DD/YY HH:mm:SS,Station,Voltage,Macro,Chemical,Flag,Light,Ref_Light,Ch1_LED,Ch2_LED,Temp,Reg_Blk,---,OBS_abs,---,Smp_abs,---,OBS_conc([Unit]),---,Smp_conc([Unit]){10}{13}" />
     <write file="Phosphate_Data-L.txt" string="#MM/DD/YY HH:mm:SS,Station,Voltage,Macro,Chemical,Flag,Light,Ref_Light,Ch1_LED,Ch2_LED,Temp,Reg_Blk,---,OBS_abs,---,Smp_abs,---,OBS_conc([Unit]),---,Smp_conc([Unit]){10}{13}" />
     <write file="Ammonium_Data-L.txt" string="#MM/DD/YY HH:mm:SS,Station,Voltage,Macro,Chemical,Flag,Light,Ref_Light,Ch1_LED,Ch2_LED,Temp,Reg_Blk,---,OBS_abs,---,Smp_abs,---,OBS_conc([Unit]),---,Smp_conc([Unit]){10}{13}" />
     <write file="Nitrite_Data-L.txt" string="#MM/DD/YY HH:mm:SS,Station,Voltage,Macro,Chemical,Flag,Light,Ref_Light,Ch1_LED,Ch2_LED,Temp,Reg_Blk,---,OBS_abs,---,Smp_abs,---,OBS_conc([Unit]),---,Smp_conc([Unit]){10}{13}" />
     <write file="Nitrate_Data-L.txt" string="#MM/DD/YY HH:mm:SS,Station,Voltage,Chemical,---,Smp_conc([Unit]){10}{13}" />

   </if>
 </script>


</scripts>
