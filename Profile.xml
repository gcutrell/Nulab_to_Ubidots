<profile interval="30000" logfile="true">
  
  <script name="startup">
	<device name="Nitrate" type="serial" port="/dev/ttyUSB0" baudrate="9600" parity="None" stopbits="1" databits="8" handshake="None" dtr="False" />
	<device name="Phosphate" type="serial" port="/dev/ttyUSB1" baudrate="9600" parity="None" stopbits="1" databits="8" handshake="None" dtr="False" />
	<device name="Ammonium" type="serial" port="/dev/ttyUSB2" baudrate="9600" parity="None" stopbits="1" databits="8" handshake="None" dtr="False" />
	<device name="NCD_RelayBoard" type="serial" port="/dev/ttyUSB3" baudrate="115200" parity="None" stopbits="1" databits="8" handshake="None" dtr="False" />
   
	<import file="SubScripts/NuLAB_Logging_Cycle_Subs.xml" />
	<import file="SubScripts/NuLAB_Logging_Misc_Subs.xml" />
	<import file="SubScripts/NCDsubs.xml" />
	<import file="SubScripts/LoggingMacroTimeTable.xml" />
	<import file="SubScripts/Monthly_RollOver.xml"/>

	<set var="StartLogging" value="0" />
  
	<set onfail="true" />
	<set var="node-webkit" value="/home/pi/ComScriptPi/nw/nw" />
	<fileio config="config.write.yml" mode="w"  />
	<set var="SysMessage" value="NuLAB Logging v1.310"/>
	<run script="WriteOutput"/>
	<pause ms="3000" />
	<!--run script="ResetCmdLines" /-->
	<run script="ReadSupplyVolts"/>
	<set vars="SysMessage,DetConfig,AnalTime" values="Ready,----,10" />
	 
	<run script="WriteOutput" />
	<fileio config="config.read.yml" mode="r"/>
	<run script="CreateEmailAccount" />
	<set var="EmailFlag" value = "0" />
	<run script="RelayConfig" />
	
	<run script="SetMacroRunTimes" />
	<set var="LoggingMode" value="1" />
	<!--delete file="log.txt" /-->

  </script>

  <script name="main">
	<!--set logfile="false" /-->
	<date var="PCdate" format="MM/dd/yyyy HH:mm:ss" />

	<while condition="[LoggingMode] == 1" >
		<log message="Running ParseCmdLines" />
		<run script="ParseCmdLines" />
		<pause seconds="1" />
		<log message="Running CheckAction" />
		<run script="CheckAction" />
		<pause seconds="1" />
		<!--set logfile="false" /-->
	</while>     
    	<run script="AllOff" />
	<run file="PlotNuLAB.sh" />
	<run file="/home/pi/ComScriptPi/profiles/SendFiles/SendFiles.sh" />
	<kill />
   </script>

</profile>
